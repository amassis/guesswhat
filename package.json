{
	"name": "guesswhat",
	"version": "1.0.0",
	"description": "GuessWhat? is a guessing game where you teach the system new things everyday.",
	"main": "app.js",
	"targets": {
		"main": false
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all",
			"not safari < 10",
			"not chrome < 51",
			"not android < 5",
			"not ie < 12"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"engines": {
		"node": "^20"
	},
	"scripts": {
		"start": "nodemon server.js",
		"start:prod": "node server.js",
		"watch": "parcel watch ./public/js/index.js --dist-dir ./public/js/bundled",
		"build": "parcel build ./public/js/index.js --dist-dir ./public/js/bundled"
	},
	"author": "Alex Assis",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.7.7",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"mongoose": "^8.6.2",
		"morgan": "^1.10.0",
		"pug": "^3.0.3",
		"slugify": "^1.6.6"
	},
	"devDependencies": {
		"eslint": "^9.10.0",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.36.1",
		"parcel": "^2.12.0"
	}
}
